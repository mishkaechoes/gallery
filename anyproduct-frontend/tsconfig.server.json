{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "ESNext",
      "target": "ES2020",
      "jsx": "react",
      "moduleResolution": "Node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true
    },
    "include": ["server/server.ts"],
    "exclude": ["node_modules", "dist"]
  }
  